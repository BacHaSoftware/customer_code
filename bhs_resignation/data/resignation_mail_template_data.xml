<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="mail_template_confirm_resignation" model="mail.template">
            <field name="name">Resignation: Confirm</field>
            <field name="model_id" ref="hr_resignation.model_hr_resignation"/>
            <field name="subject">Resignation request of {{ object.employee_id.name }}!</field>
            <field name="email_from">{{ object.employee_id.work_email }}</field>
            <field name="email_to">{{ object.employee_id.parent_id.work_email }}</field>
            <field name="body_html" type="html">
            <div style="margin: 0px; padding: 0px; font-size: 13px;">
                <p style="margin: 0px; padding: 0px; font-size: 13px;">
                    Dear <t t-out="object.employee_id.parent_id.name or 'Kevin'">Kevin</t><br/><br/>
                    You just received a resignation request from employee <t t-out="object.employee_id.name or 'Mark'">Mark</t><br/>
                    <div style="margin: 16px 0px 16px 0px;">
                        <a t-att-href="(object.get_resignation_url())"
                            style="background-color: #875A7B; padding: 8px 16px 8px 16px; text-decoration: none; color: #fff; border-radius: 5px; font-size:13px;">
                            View resignation
                        </a>
                    </div>
                </p>
            </div>
            </field>
            <field name="lang">{{ object.employee_id.parent_id.lang }}</field>
            <field name="auto_delete" eval="True"/>
        </record>

        <record id="mail_template_resignation_manager_approved" model="mail.template">
            <field name="name">Resignation: Manager Approved</field>
            <field name="model_id" ref="hr_resignation.model_hr_resignation"/>
            <field name="subject">To {{ object.employee_id.name }}: Your resignation has been approved!</field>
            <field name="email_from">{{ object.employee_id.parent_id.work_email }}</field>
            <field name="email_to">{{ object.employee_id.work_email }}</field>
            <field name="body_html" type="html">
            <div style="margin: 0px; padding: 0px; font-size: 13px;">
                <p style="margin: 0px; padding: 0px; font-size: 13px;">
                    Dear <t t-out="object.employee_id.name or 'Kevin'">Kevin</t><br/><br/>
                    Your resignation has been approved! Please confirm handover before leaving using the link below:<br/>
                    <div style="margin: 16px 0px 16px 0px;">
                        <a t-att-href="(object.get_resignation_url())"
                            style="background-color: #875A7B; padding: 8px 16px 8px 16px; text-decoration: none; color: #fff; border-radius: 5px; font-size:13px;">
                            Confirm handover
                        </a>
                    </div>
                </p>
            </div>
            </field>
            <field name="lang">{{ object.employee_id.parent_id.lang }}</field>
            <field name="auto_delete" eval="True"/>
        </record>

