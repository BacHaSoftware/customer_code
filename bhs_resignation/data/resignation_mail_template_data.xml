            <field name="body_html" type="html">
            <div style="margin: 0px; padding: 0px; font-size: 13px;">
                <p style="margin: 0px; padding: 0px; font-size: 13px;">
                    Dear <t t-out="object.employee_id.parent_id.name or 'Kevin'">Kevin</t><br/><br/>
                    <t t-out="object.employee_id.name or 'Kevin'">Kevin</t><br/><br/> has confirmed the handover! Please check with the link below:<br/>
                    <div style="margin: 16px 0px 16px 0px;">
                        <a t-att-href="(object.get_resignation_url())"
                            style="background-color: #875A7B; padding: 8px 16px 8px 16px; text-decoration: none; color: #fff; border-radius: 5px; font-size:13px;">
                            View resignation
                        </a>
                    </div>
                </p>
            </div>
            </field>
            <field name="lang">{{ object.employee_id.parent_id.lang }}</field>
            <field name="auto_delete" eval="True"/>
        </record>
    </data>
</odoo>